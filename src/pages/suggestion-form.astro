---
// Importar estilos globales y componentes
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Proponer un Juego</title>
  </head>

  <body>
    <Header />
    <div class="contact_form">
      <div class="formulario">
        <h1>Proponer una Idea de Juego</h1>
        <h3>¡Nos encantaría conocer tus ideas!</h3>

        <form action="submit-game-idea.php" method="post">
          <p>
            <label for="nombre" class="colocar_nombre">Nombre
              <span class="obligatorio">*</span>
            </label>
            <input
              type="text"
              name="introducir_nombre"
              id="nombre"
              required="obligatorio"
              placeholder="Escribe tu nombre"
            />
          </p>

          <p>
            <label for="email" class="colocar_email">Email
              <span class="obligatorio">*</span>
            </label>
            <input
              type="email"
              name="introducir_email"
              id="email"
              required="obligatorio"
              placeholder="Escribe tu Email"
            />
          </p>

          <p>
            <label for="idea" class="colocar_idea">Idea de Juego
              <span class="obligatorio">*</span>
            </label>
            <textarea
              name="introducir_idea"
              class="texto_idea"
              id="idea"
              required="obligatorio"
              placeholder="Deja aquí tu idea para un nuevo juego..."></textarea>
          </p>

          <button type="submit" name="enviar_idea" id="enviar">
            <p>Enviar Idea</p>
          </button>

          <p class="aviso">
            <span class="obligatorio"> * </span>los campos son obligatorios.
          </p>
        </form>
      </div>
    </div>
    <Footer />
  </body>
</html>
